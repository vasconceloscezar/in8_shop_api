{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"],
      "@/infra":  ["./src/infra"]
    },
    "strictNullChecks": true,
    "noImplicitAny": false
  },
  "include": ["src", "tests"],
  "exclude": []
}